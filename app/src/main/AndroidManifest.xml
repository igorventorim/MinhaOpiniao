<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cursoandroid.myopinion">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_laucher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CadastroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EstabelecimentoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecuperarSenhaActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ReclamarActivity" />
        <activity
            android:name=".AvaliacaoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdicionaLocalAcitivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>